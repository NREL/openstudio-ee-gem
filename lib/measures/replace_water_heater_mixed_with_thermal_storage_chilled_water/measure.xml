    <argument>
      <name>wh_name</name>
      <display_name>Name of Water Heater to Replace</display_name>
      <description>This object will be replaced with a new Thermal Storage Chilled Water object.</description>
      <type>String</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
